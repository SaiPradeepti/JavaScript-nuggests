    <script>
        const state = {
            loading: true,
            name: '',
            job: ''
        }

        function updateState(key, value){
            state[key] = value;
        }

        updateState('name', 'john');
        updateState('job', 'Frontend-developer');
        updateState('age', 30);
        updateState('loading', false);
        console.log(state);
    </script>
</body>
